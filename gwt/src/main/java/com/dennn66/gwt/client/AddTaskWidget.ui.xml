<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:DecoratorPanel>
        <g:VerticalPanel spacing="10">
            <g:HorizontalPanel>
                <g:Label text="Title:" width="100px"/>
                <g:TextBox ui:field="titleText"/>
            </g:HorizontalPanel>
            <g:HorizontalPanel>
                <g:Label text="Description:" width="100px"/>
                <g:TextBox ui:field="descriptionText"/>
            </g:HorizontalPanel>
            <g:HorizontalPanel>
                <g:Label text="Assignee:" width="100px"/>
                <g:ListBox ui:field="assigneeListBox">
                    <g:item value="-1L"></g:item>
                </g:ListBox>
            </g:HorizontalPanel>
            <g:Button ui:field="btnCreate">Create</g:Button>
        </g:VerticalPanel>
    </g:DecoratorPanel>
</ui:UiBinder>